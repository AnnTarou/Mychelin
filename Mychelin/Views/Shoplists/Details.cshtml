@model Mychelin.Models.Shoplist

@{
    ViewData["Title"] = "店舗詳細";
}

<!--ログアウトボタン表示-->
<div style="position: absolute; top: 10px; right: 10px;">
    <form asp-controller="Account" asp-action="Logout" method="post">
        <button type="submit" class="btn btn-primary">ログアウト</button>
    </form>
</div>

<h1 style="text-align: center;">店舗詳細</h1>

<div>
    <hr />
    <dl class="row mx-auto d-block" style="width: 50%;">

        <dd class="col-sm-10">
            <img src="@Model.ImagePath" alt="Image" class="mx-auto d-block" style="width: 50%;" />
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShoplistName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShoplistName)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Class)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Class)
        </dd>

        <!--評価の数だけ星を表示-->
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Star)
        </dt>
        <dd class="col-sm-10">
            <div style="display: flex;">
            @for (var i = 0; i < Model.Star; i++)
            {
                    <img src="~/images/design/Star.png" alt="Star" class="img-fluid" style="width: 25px;"/>
            }
            </div>
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Coment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Coment)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Url)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdatedDate)
        </dd>
       
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ShoplistId">編集する</a> |
    <a asp-action="Delete" asp-route-id="@Model?.ShoplistId">削除する</a> |
    <a asp-action="Index">マイページ</a> |
    <a asp-Controller="Search" asp-action="Find">一覧＆検索</a>
</div>
