@model Mychelin.Models.Shoplist

@{
    ViewData["Title"] = "店舗詳細";
}

<h1>店舗詳細</h1>

<div>
    <hr />
    <dl class="row mx-auto d-block" style="width: 50%;">

        <dd class="col-sm-10">
            <img src="@Model.ImagePath" alt="Image" class="mx-auto d-block" style="width: 50%;" />
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShoplistName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShoplistName)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Class)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Class)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Star)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Star)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Coment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Coment)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Url)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdatedDate)
        </dd>
       
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ShoplistId">編集する</a> |
