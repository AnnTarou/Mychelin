@model Mychelin.Models.Person

@{
    ViewData["Title"] = "アカウント情報編集";
}

<!--ログアウトボタン表示-->
<div style="position: absolute; top: 10px; right: 10px;">
    <form asp-controller="Account" asp-action="Logout" method="post">
        <button type="submit class=" btn btn-primary>ログアウト</button>
    </form>
</div>

<h1 style="text-align: center;">アカウント編集</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="PersonId" />

            <div class="form-group">
                <label asp-for="PersonName" class="control-label"></label>
                <input asp-for="PersonName" class="form-control" />
                <span asp-validation-for="PersonName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Mail" class="control-label"></label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="上書き保存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details">アカウント情報</a>
    <a asp-Controller="Shoplists" asp-action="Index">マイページ</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
