@model LoginViewModel
@{
    ViewData["Title"] = "ログイン";
}

<h2>ログイン</h2>

<form method="post">
    <!--ログインできない場合のエラーメッセージ表示-->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!--メールアドレス入力フォーム-->
    <div class="form-group">
        <label asp-for="Email">メールアドレス</label>
        <input type="email" class="form-control" name="Email" required />
    </div>

    <!--パスワード入力フォーム-->
    <div class="form-group">
        <label asp-for="Password">パスワード</label>
        <input type="password" class="form-control" name="Password" required />
    </div>

    <!--ログイン状態を保持するボタン-->
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" name="RememberMe" value="true" />
        <label class="form-check-label" for="RememberMe">ログイン状態を保持する</label>
    </div>
    <button type="submit" class="btn btn-primary">ログイン</button>
</form>

<br />

<!-- 新規会員登録ボタン -->
<a href="@Url.Action("Create", "People")" class="btn btn-secondary">新規会員登録</a>

<!-- パスワードを忘れた方はこちらボタン -->
<a href="@Url.Action("ForgotPassword", "Account")" class="btn btn-link">パスワードを忘れた方はこちら</a>