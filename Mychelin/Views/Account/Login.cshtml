@{
}
@model LoginViewModel

<h2>ログイン</h2>

<form method="post">
    <!--ログインできない場合のエラーメッセージ表示-->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!--メールアドレス入力フォーム-->
    <div class="form-group">
        <label for="Email">メールアドレス</label>
        <input type="email" class="form-control" id="Email" name="Email" required />
    </div>

    <!--パスワード入力フォーム-->
    <div class="form-group">
        <label for="Password">パスワード</label>
        <input type="password" class="form-control" id="Password" name="Password" required />
    </div>

    <!--ログイン状態を保持するボタン-->
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="RememberMe" name="RememberMe" />
        <label class="form-check-label" for="RememberMe">ログイン状態を保持する</label>
    </div>
    <button type="submit" class="btn btn-primary">ログイン</button>
</form>

<!-- 新規会員登録ボタン -->
<a href="@Url.Action("Register", "Account")" class="btn btn-secondary">新規会員登録</a>

<!-- パスワードを忘れた方はこちらボタン -->
<a href="@Url.Action("ForgotPassword", "Account")" class="btn btn-link">パスワードを忘れた方はこちら</a>

